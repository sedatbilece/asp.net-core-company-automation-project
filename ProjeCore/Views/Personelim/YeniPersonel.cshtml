
@{
    Layout = "_TestLayout";
}
@model ProjeCore.Models.Personel;


    <div class="row">
        <div class="col">
           
        </div>
        <div class="col-6">
            <form method="post" class="form-group">

                <b>Personel  adı:</b>
                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
                <br />

                <b>Personel  soyadı:</b>
                @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
                <br />

                <b>Personel  sehir:</b>
                @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                <br />

                <b>Birim: </b>

                @Html.DropDownListFor(x => x.Birim.BirimId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })


                <button class="btn btn-info">ekle</button>

            </form>
        </div>
        <div class="col">
           
        </div>
    </div>



   